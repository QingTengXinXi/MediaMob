<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/rv_permission_container"
  android:layout_width="match_parent"
  android:layout_height="400dp"
  android:layout_gravity="bottom"
  android:background="@drawable/mob_shape_dialog_background"
  android:orientation="vertical"
  tools:ignore="HardcodedText">

  <TextView
    android:id="@+id/tv_permission_header"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_alignParentTop="true"
    android:gravity="center"
    android:text="应用权限"
    android:textColor="#212121"
    android:textSize="20sp"
    android:textStyle="bold" />

  <ImageView
    android:id="@+id/iv_permission_close"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:contentDescription="@string/app_name"
    android:padding="12dp"
    android:src="@drawable/mob_icon_close" />

  <View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_below="@id/tv_permission_header"
    android:background="#D1D1D1" />

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rv_permission_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/tv_permission_header"
    android:layout_marginTop="0.5dp" />
</RelativeLayout>